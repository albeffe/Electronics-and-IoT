#include <Adafruit_GFX.h>
#include <Adafruit_ST7735.h>
#include <Adafruit_ST7789.h>
#include <SPI.h>

// TFT Screen Pins
#define TFT_CS  5
#define TFT_RST 15
#define TFT_DC  17
#define TFT_MOSI  21
#define TFT_SCLK  18

// Hardware Pins
#define LED 2
#define TAPTIC_ENGINE_1 12
#define TAPTIC_ENGINE_2 27
#define BUTTON_1 13

Adafruit_ST7789 tft = Adafruit_ST7789(TFT_CS, TFT_DC, TFT_MOSI, TFT_SCLK, TFT_RST);
float p = 3.1415926;

void setup(void) {

  // Set pin mode
  pinMode(LED,OUTPUT);
  pinMode(TAPTIC_ENGINE_1,OUTPUT);
  pinMode(TAPTIC_ENGINE_2,OUTPUT);
  pinMode(BUTTON_1,INPUT);
  
  tft.init(240, 240);
  tft.fillScreen(ST77XX_BLACK);

  tft.setTextWrap(true);
  tft.setCursor(0, 30);
  tft.setTextColor(ST77XX_WHITE);
  tft.setTextSize(3);
  tft.println("19:27:58");
  tft.setTextSize(2);
  tft.println("Ven 16");
  tft.println("Lug 2021");
  delay(8000);
  tft.fillScreen(ST77XX_BLACK);

}

void loop() {
  int Push_button_state = digitalRead(BUTTON_1);
  
  if (Push_button_state == HIGH){ 
    digitalWrite(TAPTIC_ENGINE_1, HIGH);
    digitalWrite(TAPTIC_ENGINE_2, HIGH);
  }
  else{
    digitalWrite(TAPTIC_ENGINE_1, LOW);
    digitalWrite(TAPTIC_ENGINE_2, LOW);
  }
}

